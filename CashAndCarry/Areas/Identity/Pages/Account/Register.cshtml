@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<section class="vh-100 bg-success">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container ">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <img src="~/images/cash-carry-logo.png" width="30%" height="20%" class="mx-auto d-block" />

                            <h4 class="text-uppercase text-center">Create an account</h4>

                            <form class="mt-1" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline d-flex flex-row mb-2">
                                    <div>
                                        <input asp-for="Input.FirstName" class="form-control form-control-sm" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.FirstName" class="form-label">FirstName</label>
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>


                                    </div>
                                    <div class="ml-5">
                                        <input asp-for="Input.LastName" class="form-control form-control-sm" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.LastName" class="form-label">LastName</label>
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-outline d-flex flex-row mb-2">
                                    <div>
                                        <input asp-for="Input.Email" class="form-control form-control-sm" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                                    </div>
                                    <div class="md-form md-outline input-with-post-icon tel ml-5">
                                        <input type="tel" pattern="[0-9]{2}-[0-9]{3}-[0-9]{3}" asp-for="Input.PhoneNumber" class="form-control form-control-sm" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.PhoneNumber" class="form-label">PhoneNumber</label>
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                                        @*<input type="tel" id="phone" name="phone" pattern="[0-9]{2}-[0-9]{3}-[0-9]{3}" class="form-control form-control-sm ">
                                            <label for="phone d-inline-block" class="form-label">Phone NB</label>*@
                                    </div>
                                </div>
                                <div class="md-form md-outline d-felx flex-row  mb-2">
                                    <h6>Type Of User</h6>
                                  
                                    <div class="form-check form-check">
                                        <label>Select MarketOwner/ Customer</label><br />
                                        <select asp-for="Input.Role">
                                            <option value="Customer">Customer</option>
                                            <option value="Owner">Owner</option>
                                        </select>
                                       
                                        
                                    </div>

                                    @*<div id="location" class="d-none">
                                        <label class="form-label" for="address">Address</label>
                                        <input type="address" id="address" class="form-control form-control-sm" />
                                        </div>*@
                                </div>

                                <div class="mb-1 form-outline">
                                    <input asp-for="Input.Password" class="form-control form-control-sm" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.ConfirmPassword">ConfirmPassword</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                                </div>
                                <div class="d-flex justify-content-center">
                                    <button id="registerSubmit" type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
        
                                </div>

                                <p class="text-center text-muted mt-1 mb-0">
                                    Have already an account?
                                    <a class="fw-bold text-body" asp-page="./Login"><u>Login here</u></a>
                                </p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
